  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
<div class="form-group">  

  <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", rows:"1", placeholder: "Letters, more than 1 character but less than 20." %>
　  </div>

  <label for="message_age" class="col-sm-2 control-label">年齢:</label>
    <div class="col-sm-10">
      <%= f.text_field :age, class:"form-control", rows:"1", placeholder: "Numeric, ranges from 0 to 150" %>
　  </div>

  <label for="message_body" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class:"form-control", rows:"1", placeholder: "Letters, more than 2 characters but less than 30." %>
    </div>
  
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <br>
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>

</div>
  
<% end %> 
